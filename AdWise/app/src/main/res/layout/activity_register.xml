<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_register"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="sanpi.adwise.activity.RegisterActivity">

    <TextView
        android:text="Name:"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:layout_marginStart="30dp"
        android:layout_marginTop="68dp"
        android:id="@+id/textView"
        android:fontFamily="serif"
        android:textSize="16sp"
        android:textColor="@android:color/black" />

    <TextView
        android:text="Surname:"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="51dp"
        android:id="@+id/textView2"
        android:layout_below="@+id/textView"
        android:layout_alignStart="@+id/textView"
        android:textSize="16sp"
        android:fontFamily="serif"
        android:textColor="@android:color/black" />

    <TextView
        android:text="Email:"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textView2"
        android:layout_alignStart="@+id/textView2"
        android:layout_marginTop="49dp"
        android:id="@+id/textView3"
        android:fontFamily="serif"
        android:textSize="16sp"
        android:textColor="@android:color/black" />

    <TextView
        android:text="Password:"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="38dp"
        android:id="@+id/textView4"
        android:layout_below="@+id/emailT"
        android:layout_alignStart="@+id/textView3"
        android:textSize="16sp"
        android:fontFamily="serif"
        android:textColor="@android:color/black" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPassword"
        android:ems="10"
        android:layout_below="@+id/emailT"
        android:layout_alignStart="@+id/emailT"
        android:layout_marginTop="26dp"
        android:id="@+id/passT"
        android:textSize="16sp"
        android:fontFamily="serif"
        android:textColor="?attr/actionMenuTextColor" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPassword"
        android:ems="10"
        android:layout_below="@+id/passT"
        android:layout_alignEnd="@+id/passT"
        android:layout_marginTop="22dp"
        android:id="@+id/passRT"
        android:textSize="16sp"
        android:fontFamily="serif"
        android:textColor="?attr/actionMenuTextColor" />

    <TextView
        android:text="Password (Rewrite):"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView5"
        android:layout_alignBottom="@+id/passRT"
        android:layout_alignStart="@+id/textView4"
        android:layout_alignTop="@+id/passRT"
        android:layout_toStartOf="@+id/passRT"
        android:fontFamily="serif"
        android:textSize="16sp"
        android:textColor="@android:color/black" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:ems="10"
        android:id="@+id/nameT"
        android:layout_alignBaseline="@+id/textView"
        android:layout_alignBottom="@+id/textView"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="14dp"
        android:textSize="16sp"
        android:fontFamily="serif"
        android:textColor="?attr/actionMenuTextColor" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:ems="10"
        android:id="@+id/surnameT"
        android:layout_alignBaseline="@+id/textView2"
        android:layout_alignBottom="@+id/textView2"
        android:layout_alignStart="@+id/nameT"
        android:textSize="16sp"
        android:fontFamily="serif"
        android:textColor="?attr/actionMenuTextColor" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textEmailAddress"
        android:ems="10"
        android:id="@+id/emailT"
        android:layout_alignBaseline="@+id/textView3"
        android:layout_alignBottom="@+id/textView3"
        android:layout_alignStart="@+id/surnameT"
        android:text=""
        android:textSize="16sp"
        android:fontFamily="serif"
        android:textColor="?attr/actionMenuTextColor" />

    <Button
        android:text="Sign Up"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/signupB"
        android:fontFamily="serif"
        android:layout_marginTop="16dp"
        android:layout_below="@+id/passRT"
        android:layout_alignEnd="@+id/passRT"
        android:textColor="@android:color/holo_red_dark"
        android:background="@color/colorPrimaryDark" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/informer"
        android:layout_alignBaseline="@+id/signupB"
        android:layout_alignBottom="@+id/signupB"
        android:layout_alignStart="@+id/textView5"
        android:textSize="13sp"
        android:textColor="@android:color/holo_red_dark" />
</RelativeLayout>
